				$("#accounts_filter").change( function() { fnFilterColumn('#accounts_filter',6 );	});
				<% end %>

        <% if controller_name == "advertisers" %>
				$("#accounts_filter").change( function() { fnFilterColumn('#accounts_filter',8 );	});
        $("#business_accounts_filter").change( function() { fnFilterColumn('#accounts_filter',6 ); } );
        $("#category_filter").change( function() { fnFilterColumn('#category_filter',7 ); } );
        $("#sub_filter").change( function() { fnFilterColumn('#sub_filter',8 ); } );
        <% end %>

        
				$(".filterLetter").click( function() {
					$("a.filterLetter.selected").removeClass('selected');
