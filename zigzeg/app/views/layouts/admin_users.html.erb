		$( ".accordion" ).accordion({
			autoHeight: false,
			navigation: true,
			collapsible: true,
			header: "a.accordTitle",
			active: false,
			 changestart: function(event, ui){
                var clicked = $(this).find('a.accordTitle');
								if(!clicked.hasClass('ui-state-active')){
										var contentDiv = $(this).find('div.content');
										contentDiv.load(clicked.attr("href"));
									//alert('('+clicked.attr("data-id")+') is the data_id to retrieve the data of this element to populate the form')
					}		
        }
		});
	});
	</script>

  
  <script type="text/javascript" charset="utf-8">
			function fnFilterColumn (id,i ){
					$('#example').dataTable().fnFilter($(id).val(),i,true,true,false);
			}
			function fnFilterLetter(val,i ){
				$('#example').dataTable().fnFilter("^"+val+"",i,true,true,true);
