<!DOCTYPE HTML>
<html lang="en" >
<head>
<meta charset="utf-8" />
<title>Zigzeg - <%= @post.name rescue '' %></title>
<meta name="robots" content="noindex">
<meta name="keywords" content="ZIGZEG, City Information System, Social, Directory, Places & Landmarks,  Offers & Deals, Events & Happenings, Discounts & Shopping, Businesses, What to do, Where to go, What to buy, Map & Locations">
<meta name="description" content="ZIGZEG is a city information system that combines an interactive map & a growing-by-day city information network to give people insight into the changes & happenings (activities?) occurring to the cities they live in">
<meta http-equiv="X-UA-Compatible" content="chrome=1">
<%= javascript_include_tag "modernizr.custom.js" %>

<!-- favicon -->
<link rel="shortcut icon" href="/images/favicon.ico" />

<%= stylesheet_link_tag "style" %>
<%= stylesheet_link_tag "preview" %>
<%= stylesheet_link_tag "/javascripts/fancybox/jquery.fancybox-1.3.4.css", :media => "screen" %>
<%= stylesheet_link_tag "/javascripts/themes/base/jquery.ui.tabs.css" %>
<%= stylesheet_link_tag "jquery.gallery" %>

<%= javascript_include_tag "jquery-1.6.2" %>
<%= javascript_include_tag "jquery.home" %>
<%= javascript_include_tag "ui/jquery.ui.core.js" %>
<%= javascript_include_tag "ui/jquery.ui.widget.js" %>
<%= javascript_include_tag "ui/jquery.ui.mouse.js" %>
<%= javascript_include_tag "ui/jquery.ui.tabs.js" %>
<%= javascript_include_tag "jquery.validate" %>
<%= javascript_include_tag "fancybox/jquery.fancybox-1.3.4.js" %>
<%= javascript_include_tag "jquery.rating" %>
<%= javascript_include_tag "jquery.preloader" %>
<%= javascript_include_tag "common" %>
<%= javascript_include_tag "endPage" %>
<%= javascript_include_tag "jquery.countdown" if params[:type] == "deal" %>
<%= javascript_include_tag "dealsEnd" if params[:type] == "deal"%>
<%= javascript_include_tag "jquery.gallery" %>
<%= javascript_include_tag "endPage" %>
<script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4e9d07ee4d191140"></script>       
<%= javascript_include_tag 'rails' %>
<%= csrf_meta_tag %>
<!--[if IE]>
	<%= stylesheet_link_tag "ie-fix" %>
  <%= javascript_include_tag "ie-fix" %>
<![endif]-->
<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDJT0nwhhhJuvHJC8yN0DqLcc5GNAlXRYs&sensor=true"></script>
</head>
<body>
<noscript><div class="ns">Your browser does not support JavaScript!</div></noscript> 
<script language="javascript" type="text/javascript"> 
function closeWindow() { 
 		window.open('','_self');
    window.close();
} 
</script>
<div class="previewCon">
<div class="full white previewFloat">
		<div class="container_12">
				<div class="grid_3"><h1 class="bold white margin_left_20">PAGE PREVIEW</h1></div>
				<div class="grid_4 pad_top2">This is a sample of your 
				<% if params[:type] == 'deal' %>
				Offer
				<% else %>
				Event
				<% end %> page</div>
				<div class="grid_2 fright" align="center"> <input type="button" onclick="closeWindow();" value="CLOSE PREVIEW" id="closePrev" class="radius5 cursor" name="close_preview"></div>
		</div>
</div>
</div>
<div class="loginBar">
 		<div class="fcontainer_12" id="topArea">
      <%= render "/globals/top" %>
    </div>
</div>		
<div class="bgGray pad_top20">
<%= render "/globals/searchform" %>
</div>
<div class="dealsTopBg" id="topLine">
  <div class="fcontainer_13 clearfix ">
    <!--start intro text-->
    <section id="intro" class="fgrid_12">
      <div class="fleft alpha pad_bot width70">
        <div class="full_width margin_left_20">
        <!-- text auto fill area-->
          <div class="jtextfillDeals white">
	      <span title="<%= @post.name %>"><%= @post.name %></span><br>
            <div class="pad absolute half emptyBg">&nbsp;</div>
							<div class="fleft pad_top"> 
								<div class="addthis_toolbox addthis_default_style no_margin fleft">
								<a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
								</div>
           		</div>
              <div class="fleft pad_top">
                <span class="bgDivider">&nbsp;</span>
                <a href="#loginMessage" id="zigMessagePop" name="modal" class="absolute"></a>
                <a id="zigMe" class="zigThis cursor <%= show_zigged_class(@post) %>" data-id="<%=@post.id%>">

<% unless @post.nil? %>
  <% if (show_zigged_class(@post)=='zigged') %>
    ZIGGED
  <% else %>
    ZIG THIS
  <% end %>		
<% else %>
  ZIG THIS
<% end %>

</a>
              </div>
							
          </div>
        </div>
      </div>
      <% if params[:type] == "event" %>
        <%= render :partial =>  "/globals/countdown_event", :locals => { :event => @post } %>
      <% else %>
        <%= render :partial =>  "/globals/countdown_deal", :locals => { :deal => @post } %>
      <% end %>
    </section>
    <!--end intro text-->
  </div>
</div>

</div>
<!-- end bg gray  -->


<!--start page_wrap-->
<div class="fcontainer_12 clearfix  relative">
  <%= render :partial =>  "/globals/event_breadcrumbs", :locals => { :object => @post } %>

    <!--start content-->
    <section id="content" class="fgrid_12 clearfix relative">
      <div id="main" class="width70 alpha">
        <%= yield %>
      </div>
      <!--end main-->
      <%= render :partial =>  "/globals/sidebar_preview", :locals => { :post => @post } %>
    </section>
    <!--end content-->
    <div class="clear"></div>
</div>
<!--end page_wrap-->

<%= render "/globals/footer" %>
<%= render :partial =>  "/globals/contact_form", :locals => { :place => @place } %>

<div id="boxes">
  <%= render "/globals/modal_login" %>
  <%= render "/globals/modal_forget" %>
  <%= render "/globals/modal_signup" %>
  <%#= render "/globals/modal_report" %>
  <%= render "/globals/modal_settings" %>
  <%= render "/globals/modal_updates" %>
  <div id="mask"></div>
</div>

<% unless current_user.nil? %>
  <script>
    var global_user_id = <%= current_user.id %>
  </script>
<% end %>

<%= render "/globals/analytics" %>
</body>
</html>
